# Base Image Automation Agent - Static Configuration
# Only infrastructure credentials and endpoints go here
# OTEL data is parsed dynamically from input JSON

# =============================================================================
# GITLAB CONFIGURATION
# =============================================================================
GITLAB_URL=https://app.gitlab.barcapint.com
GITLAB_API_VERSION=v4
GITLAB_PRIVATE_TOKEN=your-gitlab-token-here

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
AWS_PROXY_URL=http://primary-proxy.gslb.intranet.barcapint.com:8080
AWS_PORTAL_URL=https://awsportal.barcapint.com/v1/creds-provider/provide-credentials/

# =============================================================================
# OPENSHIFT/BCP CONFIGURATION
# =============================================================================
OSE_PRIMARY_ENDPOINT=https://api.ose-primary.barcapint.com
OSE_SHADOW_ENDPOINT=https://api.ose-shadow.barcapint.com

# =============================================================================
# RED HAT API CONFIGURATION
# =============================================================================
REDHAT_API_URL=https://catalog.redhat.com/api/containers/v1
# Fallback tag in case API is unreachable
LATEST_BASE_IMAGE_TAG=8.10-1766090767
TARGET_IMAGE_TYPE=rhel8.java8

# =============================================================================
# AGENT SETTINGS
# =============================================================================
DRY_RUN=true
LOG_LEVEL=INFO
OUTPUT_DIR=./output
